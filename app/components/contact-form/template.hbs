{{#if showSuccess}}
  <div class="msg">
    <h3>Request sent!</h3>
    <p>Our team will contact you soon!</p>
    <p>Kind regards</p>
    <p><em>Interflux Electronics</em></p>
  </div>
{{else if showError}}
  <div class="msg">
    <h3>Something went wrong</h3>
    <p>Your request was unfortunately not submitted. Our website engineer has been notified and will investigate.</p>
    <p>Please send us an email instead:</p>
    <ButtonExternalLink
      @href="mailto:lmpa@interflux.com"
      @text="LMPA@interflux.com"
      class="big orange-link"
    />
  </div>
{{else}}

  <FormInput
    @value={{lead.name}}
    @onUpdate={{action (mut lead.name)}}
    @onEnter={{action "focusOnNextField"}}
    @label="Your name"
    @placeholder="e.g. John Doe"
  />

  <FormInput
    @value={{lead.company}}
    @onUpdate={{action (mut lead.company)}}
    @onEnter={{action "focusOnNextField"}}
    @label="Company name"
    @placeholder="e.g. Electronics Expert"
  />

  <FormInput
    @value={{lead.email}}
    @onUpdate={{action (mut lead.email)}}
    @onEnter={{action "focusOnNextField"}}
    @label="Email"
    @placeholder="e.g. john.doe@electronicsexpert.com"
  />

  <FormInput
    @value={{lead.mobile}}
    @onUpdate={{action (mut lead.mobile)}}
    @onEnter={{action "focusOnNextField"}}
    @label="Mobile"
    @placeholder="e.g. +61 888 999 555"
  />

  <FormSearch
    @label="Country"
    @placeholder="e.g. {{countryPlaceholder}}"
    @options={{countries}}
    @onSelect={{action (mut lead.country)}}
    @searchKey="searchString"
  />

  <FormTextarea
    @value={{lead.message}}
    @onUpdate={{action (mut lead.message)}}
    @onEnter={{perform focusOnNextField}}
    @label="Message"
    @rows="6"
    @placeholder="Hello Interflux, Please send your LMPA expert to our company for a demonstration."
  />

  <ButtonTask
    @task={{submit}}
    @onClick={{perform submit}}
    @errors={{v-get this "errorCode" "messages"}}
    @textIdle="Send request"
    @textBusy="Sending ..."
    class="big orange"
  />
{{/if}}
