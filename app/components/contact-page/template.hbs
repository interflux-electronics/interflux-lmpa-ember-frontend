<div>
  <h2><strong>Request to be contacted</strong> get a free demo at your company</h2>
  <form>
    <div class="field">
      {{input value=demoRequest.name placeholder="Name"}}
    </div>
    <div class="field">
      {{input value=demoRequest.company placeholder="Company"}}
    </div>
    <div class="field">
      {{input value=demoRequest.email placeholder="Email"}}
    </div>
    <div class="field">
      {{input value=demoRequest.phone placeholder="Phone"}}
    </div>
    <div class="field">
      {{input value=demoRequest.country placeholder="Country"}}
    </div>
    <button {{action 'requestDemo'}} class="light-blue">Send</button>
  </form>
</div>
