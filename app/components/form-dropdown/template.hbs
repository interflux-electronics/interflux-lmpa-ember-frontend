{{#if label}}
  <label>{{label}}</label>
{{/if}}

{{#if showError}}
  <div class="error">
    <p
      onclick={{action "hideError"}}
      role="button"
    >
      {{error}}
    </p>
  </div>
{{/if}}

{{#power-select
  options=options
  searchField=searchField
  selected=selected
  onchange=(action "selectItem")
  as |item|
}}
  {{get item searchField}}
{{/power-select}}

{{#if isLoading}}
  <div class="status loading"><i class="fa fa-refresh fa-spin"></i></div>
{{else if showCheck}}
  <div class="status check"><i class="fa fa-check"></i></div>
{{/if}}