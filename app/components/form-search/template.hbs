{{#if label}}
  <label>{{label}}</label>
{{/if}}

{{#if showError}}
  <div class="error">
    <p
      onclick={{action "hideError"}}
      role="button"
    >
      {{error}}
    </p>
  </div>
{{/if}}

<div class="wrapper">
  <input
    type={{type}}
    value={{value}}
    placeholder={{placeholder}}
    tabindex={{tabindex}}
    autofocus={{autofocus}}
    onfocus={{action "_onFocus"}}
    onblur={{action "_onBlur"}}
    oninput={{action "_onInput" value="target.value"}}
    onenter={{action "_onEnter"}}
  >

  {{#if showDropdown}}
    <div class="dropdown">
      <ul>
        {{#if matches}}
          {{#each matches as |match|}}
            <li
              onclick={{action "_onClickItem" match}}
              role="button"
            >
              {{{match.html}}}
            </li>
          {{/each}}
        {{else}}
          <li>
            <span>No results found for "{{userSearch}}". ¯\_(ツ)_/¯</span>
          </li>
        {{/if}}
      </ul>
    </div>
  {{/if}}
</div>

{{#if isLoading}}
  <div class="status loading"><i class="fa fa-refresh fa-spin"></i></div>
{{else if showCheck}}
  <div class="status check"><i class="fa fa-check"></i></div>
{{/if}}